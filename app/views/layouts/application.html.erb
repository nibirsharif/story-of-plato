<!DOCTYPE html>
<html>
  <head>
    <title>Story of Plato</title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
  <div class="container">
    <%= render 'layouts/footer' %>
  </div>
</html>
